@deep: ~'>>>';
.left{
  display: flex;
}
.layout-login-img {
  width: 22px;
  height: 22px;
  border-radius: 50%;
  vertical-align: middle;
}

.left{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 0 5px 0;
}
.right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 5px 0 5px 0;
}
.top{
  display: flex;
  justify-content: space-between;
}
.middle{
  display: flex;
  justify-content: space-around;
}

img{
  width: 100%;
}
.fontColor{
  color: #D9001B;
}

